            </view>
            <view class="label data-v-515a2317">
                <view class="label-left data-v-515a2317" wx:if="{{content.subtitle}}">
                    <filter-text bind:__l="__l" class="data-v-515a2317" content="{{content.subtitle}}" vueId="11fa7142-4"></filter-text>
                </view>
                <block wx:else>
                    <view class="label-left data-v-515a2317" wx:if="{{content.sub_title}}">
                        <filter-text bind:__l="__l" class="data-v-515a2317" content="{{content.sub_title}}" vueId="11fa7142-5"></filter-text>
                    </view>
                </block>
                <view class="label-right fw-semibold data-v-515a2317" wx:if="{{content.material_type==='package'&&content.amount}}">{{'¥'+content.amount+''}}<view class="amount data-v-515a2317">起</view>
                </view>
            </view>
        </view>
    </view>
</view>
