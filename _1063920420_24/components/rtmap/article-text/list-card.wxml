        <font-weight bind:__l="__l" class="data-v-515a2317" vueId="11fa7142-1"></font-weight>
        <view class="image data-v-515a2317">
            <om-image bind:__l="__l" class="data-v-515a2317" end="?imageMogr2/format/jpg/interlace/1" height="{{170}}" mode="aspectFill" url="{{content.cover_image}}" vueId="11fa7142-2" width="{{300}}"></om-image>
        </view>
        <view class="mark data-v-515a2317" style="{{'background:'+'linear-gradient(180deg, rgba('+content.cover_image_transverse[0].theme_color[0]+', '+content.cover_image_transverse[0].theme_color[1]+', '+content.cover_image_transverse[0].theme_color[2]+', 0) 0%, rgba('+content.cover_image_transverse[0].theme_color[0]+', '+content.cover_image_transverse[0].theme_color[1]+', '+content.cover_image_transverse[0].theme_color[2]+', 100%))'+';'}}" wx:if="{{content.material_type==='package'}}"></view>
